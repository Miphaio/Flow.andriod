<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.atthis.atthisdemo.MainActivity">

    <Button
        android:id="@+id/btn01"
        android:layout_width="136dp"
        android:layout_height="37dp"
        android:layout_marginRight="124dp"
        android:fontFamily="sans-serif"
        android:text="Login"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/hintpassword"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.155"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <EditText
        android:id="@+id/username"
        android:layout_width="235dp"
        android:layout_height="42dp"
        android:layout_marginRight="27dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="LabelFor"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteY="142dp"
        tools:layout_editor_absoluteX="122dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="235dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginRight="27dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="LabelFor"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="139dp"
        android:layout_height="93dp"
        android:layout_marginLeft="83dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="28dp"
        app:layout_constraintHorizontal_bias="0.259"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/atthislogo"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <TextView
        android:id="@+id/hintusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/username"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/hintpassword"
        android:layout_width="65dp"
        android:layout_height="17dp"
        android:layout_marginLeft="8dp"
        android:text="Password"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/hintusername"
        app:layout_constraintRight_toLeftOf="@+id/password"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.512" />

    <TextView
        android:id="@+id/Terror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />


</android.support.constraint.ConstraintLayout>
